{# templates/devis/pdf.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Devis</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            width: 90%;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1, h2, h3 {
            margin: 0;
            padding: 10px 0;
            color: #007bff;
        }

        p {
            margin: 5px 0;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .section {
            margin-bottom: 20px;
        }

        .section-title {
            background-color: #f8f9fa;
            padding: 10px;
            border-radius: 5px;
            font-weight: bold;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .details-table th, .details-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .details-table th {
            background-color: #f8f9fa;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Devis</h1>
        </div>

        <div class="section">
            <div class="section-title">Détails du client</div>
            <p><strong>Nom du client:</strong> {{ devis.clientName }}</p>
        </div>

        <div class="section">
            <div class="section-title">Description</div>
            <p>{{ devis.description }}</p>
        </div>

        <div class="section">
            <div class="section-title">Montant</div>
            <p><strong>{{ devis.amount }}</strong> EUR</p>
        </div>

        <div class="section">
            <div class="section-title">Informations sur le devis</div>
            <table class="details-table">
                <tr>
                    <th>ID</th>
                    <th>Date de création</th>
                </tr>
                <tr>
                    <td>{{ devis.id }}</td>
                    <td>{{ devis.createdAt|date('Y-m-d H:i:s') }}</td>
                </tr>
            </table>
        </div>

        <div class="footer">
            <p>Merci pour votre confiance.</p>
        </div>
    </div>
</body>
</html>
